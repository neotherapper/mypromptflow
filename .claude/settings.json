{
  "project": {
    "type": "ai-knowledge-base",
    "primaryLanguage": "typescript",
    "documentationStandard": "comprehensive"
  },
  "agents": {
    "parallelLimit": 5,
    "defaultTimeout": 300,
    "retryAttempts": 3
  },
  "validation": {
    "enforceStructure": true,
    "requireAIInstructions": true,
    "checkDependencies": true
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {
          "tools": [
            "mcp__MCP_DOCKER__jira_search",
            "mcp__MCP_DOCKER__jira_get_issue",
            "mcp__MCP_DOCKER__jira_create_issue",
            "mcp__MCP_DOCKER__jira_update_issue"
          ]
        },
        "hooks": [
          {
            "type": "command",
            "command": "bash meta/mcp-learning/scripts/mcp-parameter-validator.sh \"$CLAUDE_SESSION_ID\" \"$CLAUDE_TRANSCRIPT_PATH\" \"$CLAUDE_TOOL_NAME\" \"$CLAUDE_TOOL_INPUT\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {
          "tools": [
            "mcp__MCP_DOCKER__jira_search",
            "mcp__MCP_DOCKER__jira_get_issue",
            "mcp__MCP_DOCKER__jira_create_issue",
            "mcp__MCP_DOCKER__jira_update_issue"
          ]
        },
        "hooks": [
          {
            "type": "command",
            "command": "bash meta/mcp-learning/scripts/mcp-error-detector.sh \"$CLAUDE_TOOL_NAME\" \"$CLAUDE_TOOL_OUTPUT\" 2>/dev/null || true; bash meta/mcp-learning/scripts/mcp-success-capturer.sh \"$CLAUDE_TOOL_NAME\" \"$CLAUDE_TOOL_OUTPUT\" 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
