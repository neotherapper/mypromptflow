      "mcp__MCP_DOCKER__jira_update_issue": "bash meta/mcp-learning/scripts/mcp-error-detector.sh \"$CLAUDE_TOOL_NAME\" \"$CLAUDE_TOOL_OUTPUT\" 2>/dev/null || true"
    }
  }
