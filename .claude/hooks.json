{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__MCP_DOCKER__jira_*",
        "hooks": [
          {
            "type": "command",
            "command": "../../work/vanguardAI/.jira/learning/scripts/jira-parameter-validator.sh",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "mcp__*",
        "hooks": [
          {
            "type": "command",
            "command": "meta/mcp-learning/scripts/mcp-parameter-validator.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__MCP_DOCKER__jira_*",
        "hooks": [
          {
            "type": "command",
            "command": "../../work/vanguardAI/.jira/learning/scripts/jira-error-detector.sh",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "mcp__*",
        "hooks": [
          {
            "type": "command",
            "command": "meta/mcp-learning/scripts/mcp-error-detector.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}